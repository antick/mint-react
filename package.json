{
  "name": "mint-react",
  "version": "0.6.0",
  "author": {
    "name": "Pankaj Sanam",
    "email": "pankaj@desk.sh",
    "url": "https://pankajsanam.github.io"
  },
  "keywords": [
    "mint",
    "mint react",
    "boilerplate",
    "mern",
    "react",
    "hooks",
    "frontend"
  ],
  "description": "A react + tailwind css boilerplate",
  "license": "MIT License",
  "repository": "https://github.com/pankajsanam/mint-react.git",
  "scripts": {
    "watch:css": "postcss src/assets/index.css -o public/style.css --watch",
    "start": "cross-env PORT=3001 react-scripts start",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "test": "npm run lint && jest -i --coverage",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "build:css": "tailwind build src/assets/index.css -o public/style.css",
    "test:watch": "jest --watchAll",
    "test:default": "react-scripts test",
    "build": "react-scripts build",
    "build:prod": "cross-env REACT_APP_GA_ID=UA-123123123-1 npm run build",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.1",
    "@vx/group": "0.0.198",
    "@vx/mock-data": "0.0.198",
    "@vx/scale": "0.0.198",
    "@vx/shape": "0.0.198",
    "apexcharts": "^3.20.0",
    "axios": "^0.20.0",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.2",
    "eslint-plugin-react": "^7.20.6",
    "history": "^4.10.1",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-apexcharts": "^1.3.7",
    "react-charts": "^2.0.0-beta.7",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.8",
    "react-redux": "^7.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "recharts": "^2.0.0-beta.6",
    "redux": "^4.0.5",
    "redux-logger": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "validator": "^13.1.1",
    "victory": "^35.0.8",
    "viser-react": "^2.4.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^9.8.6",
    "babel-cli": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "path": "^0.12.7",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "prettier": "^2.1.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.13.1",
    "redux-devtools": "^3.6.1",
    "redux-devtools-extension": "^2.13.8",
    "tailwindcss": "^1.7.6"
  }
}
