{
  "name": "mint-react",
  "version": "0.8.0",
  "author": {
    "name": "Pankaj Sanam",
    "email": "pankaj@desk.sh",
    "url": "https://pankajsanam.github.io"
  },
  "keywords": [
    "mint",
    "mint react",
    "boilerplate",
    "mern",
    "react",
    "hooks",
    "frontend"
  ],
  "description": "A react + tailwind css boilerplate",
  "license": "MIT License",
  "repository": "https://github.com/pankajsanam/mint-react.git",
  "scripts": {
    "watch:css": "postcss src/assets/index.css -o public/style.css --watch --max_old_space_size=4096",
    "start": "cross-env PORT=3001 react-scripts start",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "test": "npm run lint && jest -i --coverage",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "build:css": "tailwind build src/assets/index.css -o public/style.css",
    "test:watch": "jest --watchAll",
    "test:default": "react-scripts test",
    "build": "react-scripts build",
    "build:prod": "cross-env npm run build",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 67.71,
        "branches": 63.95,
        "functions": 53.54,
        "lines": 69.43
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.4.0",
    "@vx/group": "0.0.199",
    "@vx/mock-data": "0.0.199",
    "@vx/scale": "0.0.199",
    "@vx/shape": "0.0.199",
    "apexcharts": "^3.22.2",
    "axios": "^0.21.0",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-react": "^7.21.5",
    "formik": "^2.2.5",
    "framer": "^1.2.11",
    "framer-motion": "^2.9.5",
    "history": "4.10.1",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-apexcharts": "^1.3.7",
    "react-charts": "^2.0.0-beta.7",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "recharts": "^2.0.0-beta.8",
    "redux": "^4.0.5",
    "redux-logger": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "victory": "^35.4.2",
    "viser-react": "^2.4.8",
    "yup": "^0.32.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.7",
    "autoprefixer": "^10.0.4",
    "babel-cli": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "path": "^0.12.7",
    "postcss": "^8.1.13",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "prettier": "^2.2.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^17.0.1",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.8",
    "tailwindcss": "^2.0.1"
  }
}
